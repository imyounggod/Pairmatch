<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_date_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:text="Период"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clarity_date_solid"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:text="дд.мм.гггг - дд.мм.гггг"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_drop_down"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/member1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="36dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_small_player_photo1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_player_name_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_player_point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/member2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="36dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_small_player_photo2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_player_name_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_player_point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/member3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="36dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_small_player_photo3"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_player_name_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_player_point3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/member4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="36dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_small_player_photo4"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_player_name_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_player_point4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/member5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="36dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_small_player_photo5"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_player_name_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_player_point5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

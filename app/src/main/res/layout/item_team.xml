<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_date_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:text="Период"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clarity_date_solid"/>

                <TextView
                    android:id="@+id/tv_selected_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:text="дд.мм.гггг - дд.мм.гггг"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_drop_down"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/member1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:text="Игрок 1"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/member2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:text="Игрок 1"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/member3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:text="Игрок 1"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/member4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:text="Игрок 1"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/member5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:background="@color/black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:text="Игрок 1"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_add_team_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="@color/bg_global"
            android:layout_marginHorizontal="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="8dp"
                    android:textSize="14sp"
                    android:text="Очки команды"
                    android:textColor="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/yellow_1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/tv_score_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/roboto_regular"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLowСoefficient"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                app:cornerRadius="2dp"
                app:icon="@drawable/ic_coef_low"
                app:iconGravity="textEnd"
                app:backgroundTint="@color/red"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHighСoefficient"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginStart="8dp"
                app:cornerRadius="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                app:backgroundTint="@color/green"
                app:icon="@drawable/ic_coef"
                app:iconGravity="textEnd"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>